
@{
    ViewBag.Title = "Historial";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/bootstrap-table.min.css" rel="stylesheet" />

<style>
    thead tr th {
        background-color: black;
        color: white;
        text-align: center;
    }
</style>
<h2>Historial</h2>

<div class="container">
    <div style="width:100%">
        <br />
        <div class="row">
            <h4>Identificaciones guardadas:</h4>
        </div>
        <div class="form-group">
            <input style="margin-top:14px; margin-bottom:14px" class="form-control pull-right" id="filter" type="text" placeholder="Buscar...">
        </div>
        <table data-toggle="table" id="history" class="table table-striped">
            <thead>
                <tr>
                    <th data-field="numero" data-sortable="true" scope="col">#</th>
                    <th data-field="fecha" data-sortable="true" scope="col">Fecha</th>
                    <th data-field="caso" data-sortable="true" scope="col">Caso/Identificador</th>
                    <th scope="col">Información</th>
                </tr>
            </thead>
            <tbody id="historyTable">
                <tr>
                    <td>1</td>
                    <td>08/02/2018</td>
                    <td>Caso-1:33.2</td>
                    <td><a id="detalle1" class="btn btn-primary btn-md" style="width:100%" href="/home/Detalle">Detalle</a></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>05/01/2018</td>
                    <td>Caso-1:33.1</td>
                    <td><a id="detalle2" class="btn btn-primary btn-md" style="width:100%" href="/home/Detalle">Detalle</a></td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>12/02/2017</td>
                    <td>Caso-2:33.1</td>
                    <td><a id="detalle3" class="btn btn-primary btn-md" style="width:100%" href="/home/Detalle">Detalle</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-4">
        </div>
        <div class="col-xs-4" align="center">
            <a id="nuevaIdentificacion" href="/home/Index" class="btn btn-primary btn-md">Realizar nueva identificación</a>
        </div>
        <div class="col-lg-4">
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/bootstrap-table.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#filter").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#historyTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>


