
@{
    ViewBag.Title = "Historial";
}

<style>
    .row {
        overflow: hidden;
    }

    [class*="col-md-4 img-rounded"] {
        margin-bottom: -99999px;
        padding-bottom: 99999px;
    }
</style>


<h2>Mi cuenta</h2>
<div class="container">
    <br />
    <div class="row">
        <div class="col-md-3">
            <h4>Tipo de licencia: <b style="font-family:'Footlight MT'">FREE</b></h4>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary btn-md">Comprar licencia</button>
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-md-3">
            <h4>Créditos: <b style="font-family:'Footlight MT'">456</b></h4>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary btn-md">Comprar créditos</button>
        </div>
    </div>
    <br />
    <div style="width:100%">
        <br />
        <div class="row">
            <h4>Tus movimientos realizados:</h4>
        </div>
        <div class="form-group">
            <input style="margin-top:14px; margin-bottom:14px" class="form-control pull-right" id="filter" type="text" placeholder="Buscar...">
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Caso/Identificador</th>
                    <th scope="col">Costo</th>
                </tr>
            </thead>
            <tbody id="historyTable">
                <tr>
                    <th scope="row">1</th>
                    <td>08/02/2018</td>
                    <td>Caso-1:33.2</td>
                    <td>35</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>05/01/2018</td>
                    <td>Caso-1:33.1</td>
                    <td>125</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>12/02/2017</td>
                    <td>Caso-2:33.1</td>
                    <td>45</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-xs-4">
        </div>
        <div class="col-xs-4" align="center">
            <button class="btn btn-primary btn-md">Realizar nueva identificación</button>
        </div>
        <div class="col-lg-4">
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#filter").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#historyTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

