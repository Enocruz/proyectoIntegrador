<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="jumbotron">

        @if (ViewBag.Header != null) {
            <h1 style="color:steelblue; text-align:center; width:100%; align-content:center">@ViewBag.Header</h1>
        } else {
            <h1 style="color:steelblue; text-align:center; width:100%; align-content:center">Sistema automatizado de</h1>
            <h1 style="color:steelblue; text-align:center; width:100%; align-content:center">identificación de huellas</h1>
        }


    </div>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" onclick="showNavbar()">
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Huellas latentes", "Latente", "Home")</li>
                    <li>@Html.ActionLink("Impresiones de huellas", "Impresion", "Home")</li>
                    <li>@Html.ActionLink("Identificaciones guardadas", "Historial", "Home")</li>
                    <li>@Html.ActionLink("Mi cuenta", "Cuenta", "Home")</li>
                </ul>
                <h4 class="navbar-right text-center" style="text-align:center;color:white">Tus créditos: @ViewBag.creditos</h4>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center">&copy; Rodrigo Benavides, Brandon Cruz, Oscar Ruiz</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
<script type="text/javascript">
    function showNavbar() {
        var navbar = $('.navbar-collapse');
        if (navbar.is(':visible')) {
            navbar.hide();
        } else {
            navbar.show();
        }

    }

</script>

</body>
</html>